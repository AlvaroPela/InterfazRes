<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InterfazRes.Views.PersonaPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="#036F5A">
                <Frame HasShadow="False" BackgroundColor="#036F5A">
                    <Label Text="Registrar Usuario"
                            FontSize="30"
                            FontAttributes="Bold"
                            Margin="0,20,0,0"
                            HorizontalOptions="Center"
                            TextColor="White"/>
                </Frame>

                <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
                <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido"/>
                <Entry x:Name="txtEdad" Placeholder="Ingrese la edad"/>
                <Entry x:Name="txtEmail" Placeholder="Ingrese el Email"/>

                <Button x:Name="btnRegistar" Text="Registar" Clicked="btnRegistar_Clicked"/>

            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>